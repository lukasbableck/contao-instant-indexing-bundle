{
	"name": "lukasbableck/contao-instant-indexing-bundle",
	"type": "contao-bundle",
	"description": "This bundle sends a crawl request to the Google Indexing API for newly published pages, news, etc.",
	"keywords": [
		"google",
		"search console",
		"seo",
		"indexing",
		"publish",
		"crawl"
	],
	"license": "LGPL-3.0-or-later",
	"authors": [
		{
			"name": "Lukas Bableck",
			"email": "lukas@bableck.dev",
			"homepage": "https://bableck.dev"
		}
	],
	"require": {
		"php": "^8.0",
		"contao/core-bundle": "^4.13 || ^5.0",
		"google/apiclient": "^2.15"
	},
	"suggest": {
		"contao/calendar-bundle": "^4.13 || ^5.0",
		"contao/faq-bundle": "^4.13 || ^5.0",
		"contao/news-bundle": "^4.13 || ^5.0"
	},
	"conflict": {
		"contao/manager-plugin": "<2.0 || >=3.0"
	},
	"require-dev": {
		"contao/manager-plugin": "^2.0"
	},
	"autoload": {
		"psr-4": {
			"LukasBableck\\ContaoInstantIndexingBundle\\": "src/"
		}
	},
	"extra": {
		"contao-manager-plugin": "LukasBableck\\ContaoInstantIndexingBundle\\ContaoManager\\Plugin"
	}
}